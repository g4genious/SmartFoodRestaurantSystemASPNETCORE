@model IEnumerable<SmartFoodRestaurantSystem.Models.Stock>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800 mt-2">Stock Out</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Stock Out</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="example" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.In_Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Out_Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.stock)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.In_Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Out_Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.stock)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.Id)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success" >Stock Out</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>