@model SmartFoodRestaurantSystem.Models.FeedBack

@{
    ViewData["Title"] = "Create";
}

<style>
    .btn-success {
        background-color: white;
        margin-left: 80%;
        border: 2px solid #1cc88a;
        color: black;
        border-radius: 0;
        padding: 12px 30px 12px 30px;
    }

    h2 {
        color: #1cc88a;
        padding: 10px;
    }

    img {
        width: 40px;
        height: 40px;
    }

    label {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        color: black;
        font-size: 22px;
    }
</style>
<h4 class="h3 ml-3 mb-0 text-gray-800">Customer FeedBack</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <h2>How was your Food Taste?</h2>
                    <img src="~/images/smile.png" />
                    <label>Average<input asp-for="Food" type="radio" value="Average" /></label>
                    <img src="~/images/hungry (2).png" />
                    <label>Excellent<input asp-for="Food" type="radio" value="Excellent " /></label>
                    <img src="~/images/shocked.png" />
                    <label>
                        Bad
                        <input asp-for="Food" type="radio" value="Bad " />
                    </label>
                </div>
                <div class="col-md-5">
                    <h2>How was our Staff Behaviour:</h2>
                    <img src="~/images/smile.png" />
                    <label>Average <input type="radio" asp-for="Staff" value="Average"/></label>
                    <img src="~/images/hungry (2).png" />
                    <label>Excellent <input type="radio" asp-for="Staff" value="Excellent" /></label>

                    <img src="~/images/shocked.png" />
                    <label>
                        Bad <input type="radio"  asp-for="Staff" value="Bad"/>
                    </label>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <h2>How was Overall Environment?</h2>
                    <img src="~/images/smile.png" />
                    <label>Average <input type="radio" asp-for="Environment" value="Average" /></label>
                    <img src="~/images/hungry (2).png" />
                    <label>Excellent <input type="radio" asp-for="Environment" value="Excellent"/></label>
                    <img src="~/images/shocked.png" />
                    <label>
                        Bad <input type="radio" asp-for="Environment" value="Bad"/>
                    </label>
                </div>
                <div class="col-md-5">
                    <h2>Happy with our Service?</h2>
                    <img src="~/images/smile.png" />
                    <label>Average <input  type="radio" asp-for="Service" value="Average"/></label>
                    <img src="~/images/hungry (2).png" />
                    <label>Excellent <input type="radio" asp-for="Service" value="Excellent" /></label>

                    <img src="~/images/shocked.png" />
                    <label>
                        Bad <input type="radio" asp-for="Service" value="Bad" />
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Done" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

