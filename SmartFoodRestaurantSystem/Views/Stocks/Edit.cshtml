@model SmartFoodRestaurantSystem.Models.Stock

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">

    <div class="card o-hidden border-0 shadow-lg my-2 border-left-success">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Stock Out!</h1>
                        </div>
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    <label asp-for="ProductId" class="control-label">Item No</label>
                                    <input asp-for="ProductId" class="form-control" id="product_id" readonly />
                                    <span asp-validation-for="ProductId" class="text-danger"></span>
                                </div>
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="In_Quantity" class="control-label">Stock/Qnty</label>
                                    <input asp-for="In_Quantity" value="@ViewBag.stockQuantity" id="a" disabled class="form-control" />
                                    <span asp-validation-for="In_Quantity" class="text-danger"></span>
                                </div>


                                <div class="col-sm-4">
                                    <label asp-for="Out_Quantity" class="control-label">Out/Qnty</label>
                                    <input asp-for="Out_Quantity" class="form-control" id="b" onchange="calculateRemainingStock()" />
                                    <span asp-validation-for="Out_Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="stock" class="control-label">Stock</label>
                                    <input asp-for="stock" class="form-control" id="c" readonly/>
                                    <span asp-validation-for="stock" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group" style="float:right">

                                <input type="submit" value="Save" class="btn btn-primary" />


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function calculateRemainingStock() {
            var product_id = parseInt(document.getElementById("product_id").value);
            var x = parseInt(document.getElementById("a").value);
            var y = parseInt(document.getElementById("b").value);
            var z = x - y;
            document.getElementById("c").value = z;
            $.ajax({
                type: "POST",
                url: "/Products/StockQuantityUpdate",
                data: {
                    value: z,
                    product: product_id
                },
                success: function (data) {
                }
            });
        }
    </script>

}