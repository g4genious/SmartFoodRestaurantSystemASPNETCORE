            <th>
                @Html.DisplayNameFor(model => model.MenuUpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuCreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuCreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MenuName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuPriceHalf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuPriceFull)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuUpdatedDate)
