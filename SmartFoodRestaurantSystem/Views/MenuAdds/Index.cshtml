            <td>
                @Html.DisplayFor(modelItem => item.MenuUpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuCreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuCreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin.AdminId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MenuId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MenuId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MenuId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
