@model IEnumerable<SmartFoodRestaurantSystem.Models.OrderMenu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuPriceHalf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuPriceFull)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Table)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MenuName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuPriceHalf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuPriceFull)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table.TableId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MenuId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MenuId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MenuId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
