@model IEnumerable<SmartFoodRestaurantSystem.Models.MenuAdd>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuPriceHalf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuPriceFull)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuUpdatedDate)
