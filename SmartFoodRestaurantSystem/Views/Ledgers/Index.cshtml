@model IEnumerable<SmartFoodRestaurantSystem.Models.Ledger>

@{
    ViewData["Title"] = "Index";
}

<h1 class="h4 text-gray-900 mb-1 mt-2">General Ledger</h1>

<div class="container-fluid">




    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">General Ledger</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="example" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SourceAccount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DestinationAccount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PaymentType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                      
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SourceAccount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DestinationAccount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                          
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
