@model SmartFoodRestaurantSystem.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">

    <div class="card o-hidden border-0 shadow-lg my-2 border-left-success">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Add Stock!</h1>
                        </div>
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    <label asp-for="ProductId" class="control-label">Item Name</label>
                                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductName" id="a" onchange="getStockQuantity()"></select>
                   
                                    <span asp-validation-for="ProductId" class="text-danger"></span>

                                </div>

                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="In_Quantity" class="control-label">Stock/Qnty</label>
                                    <input asp-for="In_Quantity" class="form-control" id="b"/>
                                    <span asp-validation-for="In_Quantity" class="text-danger"></span>
                                </div>


                            </div>

                            <div class="form-group" style="float:right">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        function getStockQuantity() {
            var Product_Number = (document.getElementById("a").value);
            console.log(Product_Number);
             $.ajax({
                type: "POST",
                url: "/Products/getStockQuantity",
                 data: {
                     value: Product_Number
                },
                 success: function (data) {
                     document.getElementById("b").value = data;
                }
            });
        }

    </script>
}
