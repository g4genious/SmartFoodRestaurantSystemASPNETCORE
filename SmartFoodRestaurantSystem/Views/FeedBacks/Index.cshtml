@model IEnumerable<SmartFoodRestaurantSystem.Models.FeedBack>

@{
    ViewData["Title"] = "Index";
}

<h1 class="h4 text-gray-900 mb-1 mt-2">FeedBack</h1>

<div class="container-fluid">




    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">FeedBack List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="example" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Service)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Environment)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Staff)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Food)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Service)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Environment)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Staff)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Food)
                                </td>
                                <td>
                   
                                    <a asp-action="Delete" asp-route-id="@item.Id" ><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div></div></div></div>